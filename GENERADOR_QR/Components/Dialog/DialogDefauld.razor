<MudDialog>
    <TitleContent>
        <MudText>@Titulo</MudText>
    </TitleContent>
    <DialogContent>
        <MudText>@Descripcion</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Submit">Aceptar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }
    [Parameter]
    public string Titulo { get; set; }
    [Parameter]
    public string Descripcion { get; set; }

    private void Submit() => MudDialog.Close(DialogResult.Ok(true));
}